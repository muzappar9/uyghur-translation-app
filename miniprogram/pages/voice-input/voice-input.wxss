/* VoiceInputScreen样式 */
.voice-container {
  width: 100vw;
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}

.voice-container.rtl {
  direction: rtl;
}

.gradient-bg {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(180deg, #FF6B6B 0%, #FF8E53 100%);
  z-index: -1;
}

.glass-card {
  background: rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  border-radius: 48rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
}

.glass-bar {
  background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
}

.glass-btn {
  background: rgba(255, 255, 255, 0.25);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  border-radius: 48rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
}

/* AppBar */
.app-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: calc(100% - 64rpx);
  padding: 24rpx 32rpx;
  margin-top: 88rpx;
  border-radius: 32rpx;
}

.back-btn {
  width: 72rpx;
  height: 72rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-icon {
  font-size: 36rpx;
  color: #FFFFFF;
}

.app-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #FFFFFF;
}

.placeholder {
  width: 72rpx;
}

/* Status */
.status-text {
  font-size: 32rpx;
  color: #FFFFFF;
  font-weight: 500;
  margin-top: 60rpx;
}

/* Mic Circle */
.mic-circle-container {
  position: relative;
  width: 300rpx;
  height: 300rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 80rpx;
}

.mic-pulse {
  position: absolute;
  width: 100%;
  height: 100%;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.1);
  animation: pulse-anim 2s ease-out infinite;
}

.pulse-1 { animation-delay: 0s; }
.pulse-2 { animation-delay: 0.5s; }
.pulse-3 { animation-delay: 1s; }

@keyframes pulse-anim {
  0% {
    transform: scale(0.8);
    opacity: 0.8;
  }
  100% {
    transform: scale(1.5);
    opacity: 0;
  }
}

.mic-main {
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 10;
}

.mic-icon {
  font-size: 64rpx;
}

/* Recognized Area */
.recognized-area {
  width: calc(100% - 64rpx);
  min-height: 200rpx;
  padding: 32rpx;
  margin-top: 60rpx;
}

.recognized-text {
  font-size: 30rpx;
  color: #FFFFFF;
  line-height: 1.6;
}

/* Stop Button */
.stop-btn {
  padding: 28rpx 80rpx;
  margin-top: auto;
  margin-bottom: 60rpx;
}

.stop-text {
  font-size: 32rpx;
  color: #FFFFFF;
  font-weight: 600;
}
