/* HomeScreen: iOS 17/18 Glass风格 */
.home-container {
  width: 100vw;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  position: relative;
  padding: 0 32rpx;
  box-sizing: border-box;
}

.home-container.rtl {
  direction: rtl;
}

.gradient-bg {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(180deg, #FF6B6B 0%, #FF8E53 100%);
  z-index: -1;
}

/* Glass Card基础样式 */
.glass-card {
  background: rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  border-radius: 48rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
}

.glass-bar {
  background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
}

/* AppBar */
.app-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 32rpx;
  margin-top: 88rpx;
  border-radius: 32rpx;
}

.app-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #FFFFFF;
}

.settings-btn {
  width: 72rpx;
  height: 72rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* LanguageSwitchBar */
.language-switch-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx;
  margin-top: 24rpx;
}

.rtl .language-switch-bar {
  flex-direction: row-reverse;
}

.lang-btn {
  flex: 1;
  padding: 20rpx;
  text-align: center;
}

.lang-text {
  font-size: 28rpx;
  color: #FFFFFF;
  font-weight: 500;
}

.swap-btn {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 50%;
}

.swap-icon {
  font-size: 36rpx;
  color: #FFFFFF;
}

/* Mode Tabs */
.mode-tabs {
  display: flex;
  padding: 8rpx;
  margin-top: 24rpx;
  gap: 8rpx;
}

.mode-tab {
  flex: 1;
  padding: 20rpx 16rpx;
  text-align: center;
  border-radius: 40rpx;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
  transition: all 0.3s ease;
}

.mode-tab.active {
  background: rgba(255, 255, 255, 0.3);
  color: #FFFFFF;
  font-weight: 500;
}

/* Input Area */
.input-area {
  flex: 1;
  margin-top: 24rpx;
  padding: 24rpx;
  min-height: 300rpx;
}

.input-field {
  width: 100%;
  height: 100%;
  min-height: 260rpx;
  font-size: 32rpx;
  color: #FFFFFF;
  background: transparent;
}

.input-field::placeholder {
  color: rgba(255, 255, 255, 0.5);
}

/* Action Bar */
.action-bar {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 24rpx;
  padding: 32rpx 0;
  margin-top: auto;
}

.glass-btn {
  background: rgba(255, 255, 255, 0.25);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  border-radius: 48rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
}

.action-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 24rpx 40rpx;
  gap: 12rpx;
}

.mic-btn {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  padding: 0;
}

.btn-icon {
  font-size: 40rpx;
}

.btn-text {
  font-size: 28rpx;
  color: #FFFFFF;
  font-weight: 500;
}
