    </view>
  </view>

  <!-- ModeSegmentedControl -->
  <view class="mode-tabs glass-card">
    <view 
      wx:for="{{modes}}" 
      wx:key="key"
      class="mode-tab {{currentMode === index ? 'active' : ''}}"
      data-index="{{index}}"
      bindtap="onModeChange"
    >
      <text>{{item.label}}</text>
    </view>
  </view>

