<view class="home-container {{isRtl ? 'rtl' : ''}}">
  <view class="gradient-bg"></view>
  
  <!-- AppBar -->
  <view class="app-bar glass-bar">
    <text class="app-title">{{title}}</text>
    <view class="settings-btn" bindtap="onGoSettings">
      <text class="icon">âš™ï¸</text>
    </view>
  </view>

  <!-- LanguageSwitchBar -->
  <view class="language-switch-bar glass-card">
    <view class="lang-btn">
      <text class="lang-text">{{sourceLanguage}}</text>
    </view>
    <view class="swap-btn" bindtap="onSwapLanguage">
      <text class="swap-icon">â‡„</text>
    </view>
    <view class="lang-btn">
