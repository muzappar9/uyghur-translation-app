/* LanguageSwitcherPage样式 */
.lang-container {
  width: 100vw;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  position: relative;
}

.lang-container.rtl {
  direction: rtl;
}

.gradient-bg {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(180deg, #FF6B6B 0%, #FF8E53 100%);
  z-index: -1;
}

.glass-card {
  background: rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  border-radius: 48rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
}

.glass-bar {
  background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
}

.glass-btn {
  background: rgba(255, 255, 255, 0.25);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  border-radius: 48rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
}

/* AppBar */
.app-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 32rpx;
  margin: 88rpx 32rpx 0;
  border-radius: 32rpx;
}

.back-btn {
  width: 72rpx;
  height: 72rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-icon {
  font-size: 36rpx;
  color: #FFFFFF;
}

.app-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #FFFFFF;
}

.placeholder {
  width: 72rpx;
}

/* Language Options */
.lang-options {
  flex: 1;
  padding: 40rpx 32rpx;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.lang-option {
  display: flex;
  flex-direction: column;
  padding: 32rpx;
  position: relative;
}

.lang-option.active {
  background: rgba(255, 255, 255, 0.35);
}

.lang-name {
  font-size: 36rpx;
  font-weight: 600;
  color: #FFFFFF;
  margin-bottom: 8rpx;
}

.lang-native {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.6);
}

.check-icon {
  position: absolute;
  top: 50%;
  right: 32rpx;
  transform: translateY(-50%);
  font-size: 40rpx;
  color: #FFFFFF;
  font-weight: bold;
}

.rtl .check-icon {
  right: auto;
  left: 32rpx;
}

/* Apply Button */
.apply-btn {
  margin: 32rpx;
  padding: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.apply-text {
  font-size: 32rpx;
  color: #FFFFFF;
  font-weight: 600;
}
