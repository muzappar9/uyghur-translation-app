/* TranslateResultScreen样式 */
.result-container {
  width: 100vw;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  position: relative;
}

.result-container.rtl {
  direction: rtl;
}

.gradient-bg {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(180deg, #FF6B6B 0%, #FF8E53 100%);
  z-index: -1;
}

.glass-card {
  background: rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  border-radius: 48rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
}

.glass-bar {
  background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
}

.glass-btn {
  background: rgba(255, 255, 255, 0.25);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  border-radius: 48rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
}

/* AppBar */
.app-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 32rpx;
  margin: 88rpx 32rpx 0;
  border-radius: 32rpx;
}

.back-btn {
  width: 72rpx;
  height: 72rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-icon {
  font-size: 36rpx;
  color: #FFFFFF;
}

.rtl .back-icon {
  transform: scaleX(-1);
}

.app-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #FFFFFF;
}

.placeholder {
  width: 72rpx;
}

/* Content */
.content-scroll {
  flex: 1;
  padding: 24rpx 32rpx;
}

.result-card {
  padding: 32rpx;
  margin-bottom: 24rpx;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.card-title {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.7);
  font-weight: 500;
}

.card-actions {
  display: flex;
  gap: 24rpx;
}

.action-icon {
  font-size: 36rpx;
  opacity: 0.8;
}

.card-text {
  font-size: 32rpx;
  color: #FFFFFF;
  line-height: 1.6;
}

/* Bottom Actions */
.bottom-actions {
  display: flex;
  justify-content: center;
  gap: 20rpx;
  padding: 32rpx;
}

.bottom-btn {
  padding: 24rpx 32rpx;
  font-size: 28rpx;
  color: #FFFFFF;
}
