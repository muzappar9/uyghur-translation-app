/* OcrResultScreen样式 */
.ocr-container {
  width: 100vw;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  position: relative;
}

.ocr-container.rtl {
  direction: rtl;
}

.gradient-bg {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(180deg, #FF6B6B 0%, #FF8E53 100%);
  z-index: -1;
}

.glass-card {
  background: rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  border-radius: 48rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
}

.glass-bar {
  background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
}

.glass-btn {
  background: rgba(255, 255, 255, 0.25);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  border-radius: 48rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
}

/* AppBar */
.app-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 32rpx;
  margin: 88rpx 32rpx 0;
  border-radius: 32rpx;
}

.back-btn {
  width: 72rpx;
  height: 72rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-icon {
  font-size: 36rpx;
  color: #FFFFFF;
}

.app-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #FFFFFF;
}

.placeholder {
  width: 72rpx;
}

/* Image Preview */
.image-preview {
  margin: 24rpx 32rpx;
  height: 400rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.image-placeholder {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
}

.placeholder-icon {
  font-size: 64rpx;
  opacity: 0.5;
}

.placeholder-text {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.5);
}

/* Text Area */
.text-area {
  flex: 1;
  margin: 0 32rpx;
  padding: 24rpx;
  min-height: 300rpx;
}

.ocr-text-input {
  width: 100%;
  height: 100%;
  min-height: 260rpx;
  font-size: 30rpx;
  color: #FFFFFF;
  background: transparent;
  line-height: 1.6;
}

.ocr-text-input::placeholder {
  color: rgba(255, 255, 255, 0.5);
}

/* Bottom Actions */
.bottom-actions {
  display: flex;
  justify-content: center;
  gap: 24rpx;
  padding: 32rpx;
}

.action-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 24rpx 40rpx;
  gap: 12rpx;
}

.action-btn.primary {
  background: rgba(255, 255, 255, 0.35);
}

.btn-icon {
  font-size: 36rpx;
}

.btn-text {
  font-size: 28rpx;
  color: #FFFFFF;
  font-weight: 500;
}
