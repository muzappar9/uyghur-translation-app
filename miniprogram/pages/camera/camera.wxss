/* CameraScreen样式 */
.camera-container {
  width: 100vw;
  height: 100vh;
  display: flex;
  flex-direction: column;
  position: relative;
}

.camera-container.rtl {
  direction: rtl;
}

.gradient-bg {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(180deg, #1a1a2e 0%, #16213e 100%);
  z-index: -1;
}

.glass-bar {
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
}

.glass-btn {
  background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  border-radius: 48rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

/* AppBar */
.app-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 32rpx;
  margin: 88rpx 32rpx 0;
  border-radius: 32rpx;
}

.back-btn {
  width: 72rpx;
  height: 72rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-icon {
  font-size: 36rpx;
  color: #FFFFFF;
}

.app-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #FFFFFF;
}

.placeholder {
  width: 72rpx;
}

/* Camera Preview */
.camera-preview {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 32rpx;
}

.preview-placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.dashed-border {
  width: 80%;
  height: 70%;
  border: 4rpx dashed rgba(255, 255, 255, 0.3);
  border-radius: 32rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 24rpx;
}

.placeholder-icon {
  font-size: 80rpx;
  opacity: 0.5;
}

.placeholder-text {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.4);
}

/* Camera Actions */
.camera-actions {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx 48rpx 60rpx;
}

.action-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 24rpx;
  min-width: 140rpx;
  gap: 8rpx;
}

.btn-icon {
  font-size: 40rpx;
}

.btn-text {
  font-size: 22rpx;
  color: #FFFFFF;
}

.placeholder-btn {
  opacity: 0;
}

.capture-btn {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 4rpx solid rgba(255, 255, 255, 0.5);
}

.capture-inner {
  width: 100rpx;
  height: 100rpx;
  background: #FFFFFF;
  border-radius: 50%;
}
