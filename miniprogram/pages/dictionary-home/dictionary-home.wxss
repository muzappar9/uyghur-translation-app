/* DictionaryHomeScreen样式 */
.dict-container {
  width: 100vw;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  position: relative;
}

.dict-container.rtl {
  direction: rtl;
}

.gradient-bg {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(180deg, #FF6B6B 0%, #FF8E53 100%);
  z-index: -1;
}

.glass-card {
  background: rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  border-radius: 48rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
}

.glass-bar {
  background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
}

.glass-chip {
  background: rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
}

/* AppBar */
.app-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 32rpx;
  margin: 88rpx 32rpx 0;
  border-radius: 32rpx;
}

.back-btn {
  width: 72rpx;
  height: 72rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-icon {
  font-size: 36rpx;
  color: #FFFFFF;
}

.app-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #FFFFFF;
}

.placeholder {
  width: 72rpx;
}

/* Search Bar */
.search-bar {
  display: flex;
  align-items: center;
  padding: 20rpx 32rpx;
  margin: 24rpx 32rpx;
  gap: 16rpx;
}

.search-icon {
  font-size: 32rpx;
  opacity: 0.7;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #FFFFFF;
}

.search-input::placeholder {
  color: rgba(255, 255, 255, 0.5);
}

/* Content */
.content-scroll {
  flex: 1;
  padding: 0 32rpx;
}

.section {
  margin-bottom: 40rpx;
}

.section-title {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.7);
  font-weight: 500;
  margin-bottom: 20rpx;
  display: block;
}

.chips-container {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.chip {
  padding: 16rpx 28rpx;
  border-radius: 32rpx;
  font-size: 26rpx;
  color: #FFFFFF;
}
